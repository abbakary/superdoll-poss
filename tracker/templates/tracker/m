{% block extra_js %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    let isInitialLoad = true;
    let lastTrackingVehicles = [];

    // Check diagnostics on load
    checkDataDiagnostics();

    // Initialize filters with defaults if not provided from server
    const serverStartDate = '{{ start_date }}' || '';
    const serverEndDate = '{{ end_date }}' || '';

    // Parse server dates or generate defaults
    let defaultEndDate = new Date();
    let defaultStartDate = new Date();
    defaultStartDate.setDate(defaultStartDate.getDate() - 30);

    const filters = {
        period: 'monthly',
        start_date: serverStartDate || defaultStartDate.toISOString().split('T')[0],
        end_date: serverEndDate || defaultEndDate.toISOString().split('T')[0],
        status: 'all',
        order_type: 'all',
        search: ''
    };

    // Set initial date inputs
    document.getElementById('startDate').value = filters.start_date;
    document.getElementById('endDate').value = filters.end_date;
    
    // Period buttons
    document.querySelectorAll('.period-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            document.querySelectorAll('.period-btn').forEach(b => b.classList.remove('active'));
            this.classList.add('active');
            filters.period = this.dataset.period;
            
            // Update date range based on period
            const endDate = new Date(filters.end_date);
            let startDate = new Date(endDate);
            
            if (filters.period === 'daily') {
                startDate = new Date(endDate);
            } else if (filters.period === 'weekly') {
                startDate.setDate(startDate.getDate() - 7);
            } else {
                startDate.setDate(startDate.getDate() - 30);
            }
            
            document.getElementById('startDate').value = startDate.toISOString().split('T')[0];
            
            loadDashboardData();
        });
    });
    
    // View toggle
    const tableViewBtn = document.getElementById('tableViewBtn');
    const cardViewBtn = document.getElementById('cardViewBtn');
    const vehiclesTableContainer = document.getElementById('vehiclesTableContainer');

    tableViewBtn.addEventListener('click', function() {
        tableViewBtn.classList.add('active');
        cardViewBtn.classList.remove('active');
        vehiclesTableContainer.style.display = 'block';
        vehiclesTableContainer.classList.remove('card-view');
    });

    cardViewBtn.addEventListener('click', function() {
        cardViewBtn.classList.add('active');
        tableViewBtn.classList.remove('active');
        vehiclesTableContainer.classList.add('card-view');
    });

    // Filter inputs
    document.getElementById('filterBtn').addEventListener('click', loadDashboardData);
    document.querySelectorAll('.filter-input').forEach(input => {
        input.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') loadDashboardData();
        });
    });
    
    function updateFilters() {
        filters.start_date = document.getElementById('startDate').value;
        filters.end_date = document.getElementById('endDate').value;
        filters.status = document.getElementById('statusFilter').value;
        filters.order_type = document.getElementById('orderTypeFilter').value;
        filters.search = document.getElementById('searchInput').value || '';
    }

    function buildApiUrl(endpoint, params) {
        const url = new URL(endpoint, window.location.origin);
        Object.keys(params).forEach(key => {
            const value = params[key];
            if (value !== undefined && value !== null && value !== '') {
                url.searchParams.append(key, value);
            }
        });
        return url.toString();
    }

    function loadDashboardData() {
        updateFilters();
        showLoadingSpinner(true);

        const trackingParams = {
            period: filters.period,
            start_date: filters.start_date,
            end_date: filters.end_date,
            status: filters.status,
            order_type: filters.order_type,
            search: filters.search
        };

        fetch(buildApiUrl('/tracker/api/vehicles/tracking/data/', trackingParams))
            .then(r => r.json())
            .then(trackingData => {
                if (trackingData.success) {
                    renderMetrics(trackingData.summary);
                    renderVehiclesTable(trackingData.data);
                    lastTrackingVehicles = trackingData.data || [];
                } else {
                    console.error('API error:', trackingData);
                }
                showLoadingSpinner(false);
                isInitialLoad = false;
            })
            .catch(error => {
                console.error('Error loading dashboard data:', error);
                showLoadingSpinner(false);
                isInitialLoad = false;
            });
    }
    
    function renderMetrics(summary) {
        document.getElementById('quickTotalVehicles').textContent = summary.total_vehicles;
        document.getElementById('quickCompletedServices').textContent = summary.total_invoices;
        document.getElementById('quickReturningCount').textContent = summary.returning_vehicles;
        document.getElementById('quickTotalRevenue').textContent = formatCurrency(summary.total_spent);

        const completionRate = summary.total_invoices > 0 ? Math.round((summary.order_stats.completed / summary.total_invoices) * 100) : 0;
        document.getElementById('quickCompletionRate').textContent = completionRate + '% completion';

        const returnRate = summary.total_vehicles > 0 ? Math.round((summary.returning_vehicles / summary.total_vehicles) * 100) : 0;
        document.getElementById('quickReturnRate').textContent = returnRate + '% return rate';
    }

    function renderVehiclesTable(vehicles) {
        const tableBody = document.getElementById('vehiclesTableBody');
        const tableContainer = document.getElementById('vehiclesTableContainer');
        const emptyState = document.getElementById('emptyState');

        if (vehicles.length === 0) {
            tableContainer.style.display = 'none';
            emptyState.style.display = 'block';
            return;
        }

        tableContainer.style.display = 'block';
        emptyState.style.display = 'none';
        tableBody.innerHTML = '';

        vehicles.forEach((vehicle, idx) => {
            const row = document.createElement('tr');
            row.className = 'vehicle-row-expandable';

            const serviceTypesBadges = vehicle.service_types && vehicle.service_types.length > 0
                ? vehicle.service_types.map(type =>
                    `<span class="badge-custom badge-service" style="font-size: 0.75rem;">${type}</span>`
                ).join(' ')
                : '<span style="color: #999;">-</span>';

            const returningBadge = vehicle.is_returning ? '<span class="badge-custom badge-returning"><i class="fa fa-redo me-1"></i>Returning</span>' : '';

            const totalOrders = vehicle.order_count || 0;
            const completedOrders = vehicle.order_stats.completed || 0;
            const completionRate = totalOrders > 0 ? Math.round((completedOrders / totalOrders) * 100) : 0;

            let statusBadge = 'bg-secondary';
            let statusText = 'Tracking';
            let statusIcon = 'fa-info-circle';

            if (vehicle.order_stats.completed > 0) {
                statusBadge = 'bg-success';
                statusText = `${completionRate}% Complete`;
                statusIcon = 'fa-check-circle';
            } else if (vehicle.order_stats.in_progress > 0) {
                statusBadge = 'bg-info';
                statusText = 'In Service';
                statusIcon = 'fa-spinner';
            } else if (vehicle.order_stats.pending > 0) {
                statusBadge = 'bg-warning';
                statusText = 'In Queue';
                statusIcon = 'fa-clock';
            }

            const avgSpending = vehicle.invoice_count > 0 ? vehicle.total_spent / vehicle.invoice_count : 0;
            const trackingStatus = vehicle.is_returning ?
                '<i class="fa fa-sync-alt me-1" style="color: #20c997;"></i>Regular Customer' :
                '<i class="fa fa-check me-1" style="color: #0d6efd;"></i>Active Tracking';

            row.innerHTML = `
                <td style="text-align: center;">
                    <span class="expand-icon" onclick="toggleInvoiceDetails(${idx})">
                        <i class="fa fa-chevron-down"></i>
                    </span>
                </td>
                <td>
                    <strong style="display: flex; align-items: center; gap: 6px;">
                        <i class="fa fa-car" style="color: var(--primary-color);"></i>
                        ${vehicle.plate_number}
                    </strong>
                    <small class="text-muted">${vehicle.make || '-'} ${vehicle.model || ''}</small>
                    <br><small class="text-muted">${vehicle.vehicle_type || 'Vehicle'}</small>
                </td>
                <td>
                    <div><strong>${vehicle.customer_name}</strong></div>
                    <small class="text-muted" style="display:block;"><i class="fa fa-phone me-1"></i>${vehicle.customer_phone}</small>
                </td>
                <td>
                    <div style="margin-bottom: 4px;">${serviceTypesBadges}</div>
                    <small class="text-muted">${vehicle.service_types ? vehicle.service_types.length : 0} types</small>
                </td>
                <td style="text-align: center;">
                    <div><strong style="font-size: 1.1rem;">${vehicle.order_count || 0}</strong></div>
                    <small class="text-muted">Total</small>
                </td>
                <td style="text-align: center;">
                    <div><strong style="font-size: 1.1rem; color: var(--primary-color);">${vehicle.invoice_count}</strong></div>
                    <small class="text-muted">Services</small>
                </td>
                <td>
                    <div style="margin-bottom: 6px;">
                        <span class="badge ${statusBadge}" style="display: flex; align-items: center; gap: 4px; width: fit-content; font-size: 0.85rem;">
                            <i class="fa ${statusIcon}"></i>${statusText}
                        </span>
                    </div>
                    ${returningBadge}
                    <div style="font-size: 0.8rem; margin-top: 4px;">${trackingStatus}</div>
                </td>
                <td style="text-align: right;">
                    <div><strong style="color: var(--success-color); font-size: 0.95rem;">${formatCurrency(vehicle.total_spent)}</strong></div>
                    <small class="text-muted">Total</small>
                    <small class="text-muted" style="display: block; margin-top: 2px;">Avg: ${formatCurrency(avgSpending)}</small>
                </td>
                <td style="text-align: right;">
                    <button class="btn btn-sm btn-outline-primary" onclick="viewVehicleDetails(${vehicle.id}, ${vehicle.customer_id}, '${vehicle.plate_number.replace(/'/g, "\'")}')">
                        <i class="fa fa-eye me-1"></i>View
                    </button>
                </td>
            `;
            tableBody.appendChild(row);
            
            // Invoice details row
            const detailsRow = document.createElement('tr');
            detailsRow.className = 'invoice-details';
            detailsRow.id = `details-${idx}`;
            
            const invoicesHtml = vehicle.invoices.map(invoice => `
                <div class="invoice-card">
                    <div class="invoice-header">
                        <div>
                            <div class="invoice-number">${invoice.invoice_number}</div>
                            <div class="invoice-date">${new Date(invoice.invoice_date).toLocaleDateString()}</div>
                        </div>
                        <div>
                            <div class="invoice-amount">${formatCurrency(invoice.total_amount)}</div>
                            <div style="font-size: 0.8rem; color: #666; margin-top: 4px;">
                                Tax: ${formatCurrency(invoice.tax_amount)}
                            </div>
                        </div>
                    </div>
                    <div style="font-size: 0.85rem; color: #666; margin-bottom: 8px;">
                        <div>Reference: <strong>${invoice.reference || 'N/A'}</strong></div>
                        <div>Order: <strong>${invoice.order_number || 'N/A'}</strong></div>
                        ${invoice.categories && invoice.categories.length > 0 ? `
                            <div style="margin-top: 6px;">
                                Categories: ${invoice.categories.map(cat => `<span class="badge-custom badge-service" style="font-size: 0.7rem;">${cat}</span>`).join(' ')}
                            </div>
                        ` : ''}
                    </div>
                    <table class="line-items-table">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Description</th>
                                <th>Category</th>
                                <th style="text-align: center;">Qty</th>
                                <th style="text-align: right;">Unit Price</th>
                                <th style="text-align: right;">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            ${invoice.line_items.map(item => {
                                const formatQty = (qty) => {
                                    const num = parseFloat(qty);
                                    return Number.isInteger(num) ? num.toString() : num.toFixed(2).replace(/0+$/, '').replace(/\.$/, '');
                                };
                                return `
                                <tr>
                                    <td><code style="font-size: 0.8rem;">${item.code || '-'}</code></td>
                                    <td style="font-size: 0.85rem;">${item.description}</td>
                                    <td><span class="badge-custom badge-service" style="font-size: 0.7rem;">${item.category}</span></td>
                                    <td style="text-align: center;">${formatQty(item.qty)}</td>
                                    <td style="text-align: right;">${formatCurrency(item.unit_price)}</td>
                                    <td style="text-align: right;"><strong>${formatCurrency(item.total)}</strong></td>
                                </tr>
                                `;
                            }).join('')}
                        </tbody>
                    </table>
                    <div style="margin-top: 8px; font-size: 0.85rem; text-align: right; border-top: 1px solid #eee; padding-top: 8px;">
                        <div>Subtotal: <strong>${formatCurrency(invoice.subtotal)}</strong></div>
                        <div>Total: <strong style="color: #28a745;">${formatCurrency(invoice.total_amount)}</strong></div>
                    </div>
                </div>
            `).join('');
            
            detailsRow.innerHTML = `
                <td colspan="8">
                    <div class="invoice-items">
                        <h5 style="font-size: 1.1rem;">Invoices for ${vehicle.plate_number}</h5>
                        ${invoicesHtml}
                    </div>
                </td>
            `;
            tableBody.appendChild(detailsRow);
        });
    }
    
    function showLoadingSpinner(show) {
        document.getElementById('loadingSpinner').classList.toggle('active', show);
    }
    
    function formatCurrency(amount) {
        return new Intl.NumberFormat('en-US', {
            style: 'currency',
            currency: 'TZS',
            minimumFractionDigits: 0,
            maximumFractionDigits: 0
        }).format(amount);
    }
    
    window.toggleInvoiceDetails = function(idx) {
        const detailsRow = document.getElementById(`details-${idx}`);
        const icon = detailsRow.previousElementSibling.querySelector('.expand-icon i');
        
        detailsRow.classList.toggle('expanded');
        
        if (detailsRow.classList.contains('expanded')) {
            icon.className = 'fa fa-chevron-up';
        } else {
            icon.className = 'fa fa-chevron-down';
        }
    };
    
    window.viewVehicleDetails = function(vehicleId, customerId, plate) {
        try {
            if (customerId) {
                var base = "{% url 'tracker:customer_detail' 0 %}";
                var url = base.replace('/0/', '/' + customerId + '/');
                window.location.href = url;
                return;
            }
            if (vehicleId) {
                var baseEdit = "{% url 'tracker:vehicle_edit' 0 %}";
                var urlEdit = baseEdit.replace('/0/', '/' + vehicleId + '/');
                window.location.href = urlEdit;
                return;
            }
            var searchBase = "{% url 'tracker:customers_search' %}";
            var q = plate ? ('?q=' + encodeURIComponent(plate)) : '';
            window.location.href = searchBase + q;
        } catch (e) {}
    };

    function checkDataDiagnostics() {
        fetch('/tracker/api/vehicles/tracking/diagnostics/')
            .then(r => r.json())
            .then(data => {
                if (data.success && data.status === 'warning' && data.counts.invoices === 0) {
                    const seedBtn = document.getElementById('seedDataBtn');
                    if (seedBtn) {
                        seedBtn.style.display = 'inline-block';
                        seedBtn.addEventListener('click', seedSampleData);
                    }
                    console.log('No data found. Seed button available.');
                } else if (data.success) {
                    console.log('Data diagnostics:', data);
                }
            })
            .catch(e => console.error('Error checking diagnostics:', e));
    }

    window.seedSampleData = function() {
        if (!confirm('This will create sample vehicle tracking data. Continue?')) {
            return;
        }

        const seedBtn = document.getElementById('seedDataBtn');
        if (seedBtn) seedBtn.disabled = true;

        fetch('/tracker/api/vehicles/tracking/seed/', { method: 'POST' })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    alert('Sample data created successfully! The dashboard will refresh.');
                    setTimeout(loadDashboardData, 500);
                } else {
                    alert('Error: ' + data.message);
                }
            })
            .catch(e => {
                alert('Error seeding data: ' + e.message);
                console.error('Seed error:', e);
            })
            .finally(() => {
                if (seedBtn) seedBtn.disabled = false;
            });
    };

    loadDashboardData();
});
</script>
{% endblock %}