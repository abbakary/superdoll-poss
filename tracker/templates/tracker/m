                    <div class="status-value" id="quickTotalVehicles">0</div>
                    <div class="status-label">Active Vehicles</div>
                    <div class="status-trend" id="quickVehicleTrend"><i class="fa fa-arrow-up"></i> This period</div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6 col-12">
            <div class="tracking-status-card services-completed">
                <div class="status-icon"><i class="fa fa-check-circle"></i></div>
                <div class="status-content">
                    <div class="status-value" id="quickCompletedServices">0</div>
                    <div class="status-label">Services Completed</div>
                    <div class="status-trend" id="quickCompletionRate"><i class="fa fa-star"></i> On track</div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6 col-12">
            <div class="tracking-status-card repeat-customers">
                <div class="status-icon"><i class="fa fa-redo-alt"></i></div>
                <div class="status-content">
                    <div class="status-value" id="quickReturningCount">0</div>
                    <div class="status-label">Returning Vehicles</div>
                    <div class="status-trend" id="quickReturnRate"><i class="fa fa-sync"></i> Repeat business</div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6 col-12">
            <div class="tracking-status-card total-revenue">
                <div class="status-icon"><i class="fa fa-money-bill-wave"></i></div>
                <div class="status-content">
                    <div class="status-value" id="quickTotalRevenue">0</div>
                    <div class="status-label">Total Revenue</div>
                    <div class="status-trend" id="quickRevenueGrowth"><i class="fa fa-chart-line"></i> Strong growth</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Period Selection & Quick Actions -->
    <div class="period-tabs">
        <div class="period-controls">
            <button class="period-btn active" data-period="daily">
                <i class="fa fa-calendar-day me-1"></i>Daily
            </button>
            <button class="period-btn" data-period="weekly">
                <i class="fa fa-calendar-week me-1"></i>Weekly
            </button>
            <button class="period-btn" data-period="monthly">
                <i class="fa fa-calendar-month me-1"></i>Monthly
            </button>
        </div>
        <div class="view-controls">
            <button class="view-btn active" id="tableViewBtn" title="Table View">
                <i class="fa fa-table"></i>
            </button>
            <button class="view-btn" id="cardViewBtn" title="Card View">
                <i class="fa fa-th"></i>
            </button>
        </div>
    </div>

    <!-- Filters -->
    <div class="filter-card">
        <div class="filter-row">
            <div class="form-group">
                <label for="startDate">Start Date</label>
                <input type="date" id="startDate" class="filter-input" value="{{ start_date }}">
            </div>
            <div class="form-group">
                <label for="endDate">End Date</label>
                <input type="date" id="endDate" class="filter-input" value="{{ end_date }}">
            </div>
            <div class="form-group">
                <label for="statusFilter">Order Status</label>
                <select id="statusFilter" class="filter-input">
                    <option value="all">All Status</option>
                    <option value="completed">Completed</option>
                    <option value="pending">Pending</option>
                </select>
            </div>
            <div class="form-group">
                <label for="orderTypeFilter">Order Type</label>
                <select id="orderTypeFilter" class="filter-input">
                    <option value="all">All Types</option>
                    <option value="service">Service</option>
                    <option value="sales">Sales</option>
                    <option value="labour">Labour</option>
                </select>
            </div>
            <div class="form-group">
                <label for="searchInput">Search</label>
                <input type="text" id="searchInput" class="filter-input" placeholder="Plate number or customer name">
            </div>
            <div class="form-group">
                <button id="filterBtn" class="btn btn-primary" style="width: 100%; padding: 8px;">
                    <i class="fa fa-filter me-1"></i>Apply Filters
                </button>
            </div>
        </div>
    </div>

    <!-- Loading Indicator -->
    <div class="loading-spinner" id="loadingSpinner">
        <i class="fa fa-spinner fa-spin fa-2x"></i>
        <p>Loading data...</p>
    </div>

    <!-- Vehicles Table -->
    <div class="vehicle-table" id="vehiclesTableContainer" style="display:none;">
        <table id="vehiclesTable">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        <i class="fa fa-car me-1"></i>Vehicle
                        <br><small style="font-weight: normal;">Plate / Make-Model</small>
                    </th>
                    <th>
                        <i class="fa fa-user me-1"></i>Customer
                        <br><small style="font-weight: normal;">Name / Phone</small>
                    </th>
                    <th>
